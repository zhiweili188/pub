<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="
    http://www.springframework.org/schema/beans        
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
    http://www.springframework.org/schema/context                
    http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<bean id="sqlSessionFactory" class="org.mybatis.spring.SqlSessionFactoryBean">    
	    <property name="dataSource" ref="dataSource" />    
	    <property name="configLocation" value="/WEB-INF/mybatis-config/sqlMapConfig.xml" />
	</bean>    
	
	<!-- mapper bean -->    
	<bean id="menuDao" class="org.mybatis.spring.mapper.MapperFactoryBean">    
	    <property name="mapperInterface" value="com.szreach.mediacenter.auth.menu.dao.MenuDao" />    
	    <property name="sqlSessionFactory" ref="sqlSessionFactory" />    
	</bean> 
	
	<!-- mapper bean -->    
	<bean id="userGroupDao" class="org.mybatis.spring.mapper.MapperFactoryBean">    
	    <property name="mapperInterface" value="com.szreach.mediacenter.auth.usergroup.dao.UserGroupDao" />    
	    <property name="sqlSessionFactory" ref="sqlSessionFactory" />    
	</bean> 
	<!-- mapper bean -->    
	<bean id="roleDao" class="org.mybatis.spring.mapper.MapperFactoryBean">    
	    <property name="mapperInterface" value="com.szreach.mediacenter.auth.role.dao.RoleDao" />    
	    <property name="sqlSessionFactory" ref="sqlSessionFactory" />    
	</bean> 
</beans>